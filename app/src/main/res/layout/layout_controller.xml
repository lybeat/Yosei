<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cc.arturia.yosei.widget.media.YoseiSubtitle
        android:id="@+id/yosei_subtitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/ll_media_info"
        layout="@layout/layout_media_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:visibility="gone" />

    <include
        android:id="@+id/ll_media_controller"
        layout="@layout/layout_media_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone" />

    <include
        android:id="@+id/ll_progress"
        layout="@layout/layout_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <include
        android:id="@+id/ll_volume"
        layout="@layout/layout_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <include
        android:id="@+id/ll_brightness"
        layout="@layout/layout_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <include
        android:id="@+id/ll_group"
        layout="@layout/layout_group"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end" />
</FrameLayout>