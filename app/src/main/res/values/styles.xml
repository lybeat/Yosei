<resources>

    <style name="YoseiTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="ImmersiveTheme" parent="YoseiTheme">
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorPrimaryDark">@color/color_accent</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlActivated">@color/color_accent</item>
        <item name="colorSwitchThumbNormal">@color/bg_content</item>
        <item name="android:colorBackground">@color/bg_content</item>
    </style>

    <style name="FullScreenTheme" parent="ImmersiveTheme">
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="Yosei.Theme" parent="YoseiTheme" />

    <style name="Yosei.Theme.Widget" />

    <style name="Yosei.Theme.Widget.SeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/seek_bar_horizontal</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:thumb">@drawable/seek_bar_thumb</item>
        <item name="android:thumbOffset">6dp</item>
    </style>

    <style name="Yosei.Theme.Widget.ProgressBar.Horizontal" parent="Yosei.Theme.Widget.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progress_bar_web</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:thumb">@null</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

    <style name="Yosei.Theme.Widget.CheckBox">
        <item name="android:button">@drawable/check_box_selector</item>
    </style>

</resources>
